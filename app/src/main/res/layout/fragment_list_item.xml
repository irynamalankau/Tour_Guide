<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_image"
        style="@style/fragment_list_item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_image_placeholder"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/list_item_name"
        style="@style/fragment_list_item_name"
        app:layout_constraintStart_toEndOf="@+id/list_item_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <TextView
        android:id="@+id/list_item_address"
        style="@style/fragment_list_item_address"
        app:layout_constraintStart_toStartOf="@+id/list_item_name"
        app:layout_constraintTop_toBottomOf="@+id/list_item_name"
        tools:text="Address" />

    <TextView
        android:id="@+id/list_item_phone"
        style="@style/fragment_list_item_phone"
        app:layout_constraintBottom_toTopOf="@+id/list_item_description"
        app:layout_constraintStart_toStartOf="@+id/list_item_address"
        app:layout_constraintTop_toBottomOf="@+id/list_item_address"
        tools:text="Phone" />

    <TextView
        android:id="@+id/list_item_description"
        style="@style/fragment_list_item_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_item_phone"
        app:layout_constraintTop_toBottomOf="@+id/list_item_phone"
        tools:text="Description" />

</androidx.constraintlayout.widget.ConstraintLayout>