<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/fragment_list_item_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/list_item_image"
                style="@style/fragment_list_item_card_image" />

            <LinearLayout
                android:id="@+id/info_container"
                style="@style/fragment_list_item_card_info_container">

                <TextView
                    android:id="@+id/list_item_name"
                    tools:text="Title"
                    style="@style/fragment_list_item_card_name" />

                <TextView
                    android:id="@+id/list_item_address"
                    tools:text="Address"
                    style="@style/fragment_list_item_card_address" />

                <TextView
                    android:id="@+id/list_item_phone"
                    tools:text="Phone"
                    style="@style/fragment_list_item_card_phone" />

                <TextView
                    android:id="@+id/list_item_description"
                    tools:text="Description"
                    style="@style/fragment_list_item_card_description" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>